<dashboard script="autodiscover.js, deploymentDuration.js, deploymentOutcomeByProject.js"
  stylesheet="octopusdeploy.css, nv.d3.min.css">
  <label>Deployments</label>
  <search id="durationGroupedSearch" ref="OctopusDeploy - DurationGrouped"></search>

  <row>
    <panel>
      <html>
        <h2>Outcome by Project</h2>
        <div id="deploymentOutcomeByProject">
          <svg id="deploymentOutcomeByProjectChart"></svg>
        </div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Longest Releases through Environments</title>
        <search id="longestReleases" ref="OctopusDeploy - LongestReleases"></search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>

  <row>
    <panel>
      <html>
        <h2>Deployment Duration</h2>
        <div id="byDuration">
          <svg id="byDurationChart"></svg>
        </div>
      </html>
    </panel>
  </row>

</dashboard>
